<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="app.com.example.android.audiobooks">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/mylibrary_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Book1Activity"
            android:label="@string/text_book1">
        </activity>
        <activity
            android:name=".PlayActivity"
            android:label="@string/play_activity">
        </activity>
        <activity
            android:name=".PlaylistActivity"
            android:label="@string/playlist_activity">
        </activity>
        <activity android:name=".Book2Activity"
            android:label="The Little Prince">
        </activity>
        <activity android:name=".Book3Activity"
            android:label="Gone with the Wind">
        </activity>
    </application>

</manifest>